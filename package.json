{
  "name": "vitest-playwright-bridge",
  "version": "0.0.0",
  "description": "Bridge to interact with Playwright directly from Vitest browser tests, enabling advanced browser control and access to Playwright features.",
  "type": "module",
  "sideEffects": false,
  "exports": {
    "./browser": {
      "types": "./dist/browser.d.ts",
      "import": "./dist/browser.js"
    },
    "./plugin": {
      "types": "./dist/plugin.d.ts",
      "import": "./dist/plugin.js"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "test": "vitest run",
    "watch": "vitest --browser.headless=false",
    "clean": "node -e \"fs.rmSync('dist', { recursive: true, force: true })\"",
    "build": "tsup",
    "lint": "eslint .",
    "prepare": "pnpm build"
  },
  "keywords": [
    "vitest",
    "playwright",
    "bridge",
    "browser",
    "testing",
    "plugin",
    "vitest-plugin",
    "network",
    "routing",
    "page",
    "context"
  ],
  "repository": "github:PaperStrike/vitest-playwright-bridge",
  "license": "MIT",
  "files": [
    "dist",
    "CHANGELOG.*"
  ],
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "peerDependencies": {
    "@vitest/browser-playwright": "^4.0.0",
    "playwright": "*",
    "vitest": "^4.0.0"
  },
  "devDependencies": {
    "@eslint/compat": "^2.0.0",
    "@eslint/js": "^9.39.1",
    "@eslint/markdown": "^7.5.1",
    "@stylistic/eslint-plugin": "^5.6.1",
    "@types/node": "^24.10.1",
    "@vitest/browser-playwright": "^4.0.13",
    "birpc": "^2.8.0",
    "eslint": "^9.39.1",
    "msgpackr": "^1.11.5",
    "playwright": "^1.56.1",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.47.0",
    "vitest": "^4.0.13"
  },
  "packageManager": "pnpm@10.23.0+sha512.21c4e5698002ade97e4efe8b8b4a89a8de3c85a37919f957e7a0f30f38fbc5bbdd05980ffe29179b2fb6e6e691242e098d945d1601772cad0fef5fb6411e2a4b"
}
