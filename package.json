{
  "name": "vitest-playwright-bridge",
  "version": "0.0.0",
  "description": "Bridge to interact with Playwright directly from Vitest browser tests, enabling advanced browser control and access to Playwright features.",
  "type": "module",
  "sideEffects": false,
  "exports": {
    "./browser": {
      "types": "./dist/browser.d.ts",
      "import": "./dist/browser.js"
    },
    "./plugin": {
      "types": "./dist/plugin.d.ts",
      "import": "./dist/plugin.js",
      "require": "./dist/plugin.cjs"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "test": "vitest run",
    "watch": "vitest --browser.headless=false",
    "clean": "node -e \"fs.rmSync('dist', { recursive: true, force: true })\"",
    "build": "tsup",
    "lint": "eslint .",
    "prepare": "pnpm build"
  },
  "keywords": [
    "vitest",
    "playwright",
    "bridge",
    "browser",
    "testing",
    "plugin",
    "vitest-plugin",
    "network",
    "routing",
    "page",
    "context"
  ],
  "repository": "github:PaperStrike/vitest-playwright-bridge",
  "license": "MIT",
  "files": [
    "dist",
    "CHANGELOG.*"
  ],
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "dependencies": {
    "estree-walker": "^3.0.3",
    "magic-string": "^0.30.21"
  },
  "peerDependencies": {
    "@vitest/browser-playwright": "^4.0.0",
    "playwright": "*",
    "vitest": "^4.0.0"
  },
  "devDependencies": {
    "@eslint/compat": "^2.0.0",
    "@eslint/js": "^9.39.1",
    "@eslint/markdown": "^7.5.1",
    "@stylistic/eslint-plugin": "^5.6.1",
    "@types/estree": "^1.0.8",
    "@types/node": "^24.10.1",
    "@vitest/browser-playwright": "^4.0.14",
    "birpc": "^2.8.0",
    "eslint": "^9.39.1",
    "msgpackr": "^1.11.5",
    "playwright": "^1.57.0",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.0",
    "vitest": "^4.0.14"
  },
  "packageManager": "pnpm@10.24.0+sha512.01ff8ae71b4419903b65c60fb2dc9d34cf8bb6e06d03bde112ef38f7a34d6904c424ba66bea5cdcf12890230bf39f9580473140ed9c946fef328b6e5238a345a"
}
